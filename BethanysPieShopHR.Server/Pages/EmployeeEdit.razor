@page "/employeeedit"
@page "/employeeedit/{employeeId}"
@inherits EmployeeEditBase
<h3>EmployeeEdit</h3>
<section class="employee-edit">
    <h1 class="page-title">Deatails for @Employee.FirstName @Employee.LastName</h1>
    <EditForm Model="@Employee">
        <div class="form-group row">
            <label for="lastName" class="col-sm-3">Last Name :</label> 
            <InputText id="lastName" @bind-Value="@Employee.LastName" class="form-control col-sm-8" placeholder="Enter last Name "></InputText>
        </div>
         <div class="form-group row">
            <label for="firstName" class="col-sm-3">First Name :</label> 
            <InputText id="lastName" @bind-Value="@Employee.FirstName" class="form-control col-sm-8" placeholder="Enter first Name "></InputText>
        </div> 
        
        <div class="form-group row">
            <label for="birthDate" class="col-sm-3">BirthDate :</label> 
            <InputDate id="birthDate" @bind-Value="@Employee.BirthDate" class="form-control col-sm-8" placeholder="Enter first Name "></InputDate>
        </div> 
        
        <div class="form-group row">
            <label for="email" class="col-sm-3">Email :</label> 
            <InputText id="email" @bind-Value="@Employee.Email" class="form-control col-sm-8" placeholder="Email "></InputText>
        </div>  
        <div class="form-group row">
            <label for="street" class="col-sm-3">Street :</label> 
            <InputText id="street" @bind-Value="@Employee.Street" class="form-control col-sm-8" placeholder="Street "></InputText>
        </div> 
        <div class="form-group row">
            <label for="street" class="col-sm-3">Zip Code :</label> 
            <InputText id="street" @bind-Value="@Employee.Zip" class="form-control col-sm-8" placeholder="Zip Code "></InputText>
        </div>
        
        <div class="form-group row">
            <label for="city" class="col-sm-3">City :</label> 
            <InputText id="city" @bind-Value="@Employee.City" class="form-control col-sm-8" placeholder="City"></InputText>
        </div>

    </EditForm>
</section>

